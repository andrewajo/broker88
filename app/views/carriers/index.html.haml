.span8
	%table.table.table-condensed.tableheader
		%thead
			%tr
				%th Name
				%th MC #
				%th City
				%th State
				%th Phone Number
				%th Toll Free
				%th Fax Number
				%th Ins Exp
				%th
	#scrollcontent
		.scrollbar
			.track
				.thumb
					.end
		.viewport
			%table.table.table-condensed.overview
				%tbody
					- @carriers.each do |carrier|
						%tr{'data-url' => carrier_url(carrier), :class => carrier == @carrier ? 'active-row' : ''}
							%td= carrier.name
							%td= carrier.mc_number
							%td= carrier.city
							%td= carrier.state
							%td= carrier.phone_number
							%td= carrier.toll_free
							%td= carrier.fax_number
							%td= carrier.insurance_expiry
.span4
	.sidebar{:data => {"pjax-container" => true}}
		- if @carrier.nil?
			.alert.alert-error
				No Results
				.pull-right= link_to 'Clear Search', carriers_path
		-else

			.well-header
				= @carrier.name
			.well
				.row-fluid
					.span6
						.field
							%b Unit #
							%br
							= @carrier.unit_number
						.field
							%b City
							%br
							= @carrier.city
						.field
							%b Country
							%br
							= @carrier.country
					.span6
						.field
							%b Address
							%br
							= @carrier.street_address
						.field
							%b State
							%br
							= @carrier.state
						.field
							%b Postal Code
							%br
							= @carrier.postal_code
